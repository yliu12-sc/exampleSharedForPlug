	Globals.gTimeDelta   = ( overrideTimeEnabled == 1 ) ? overrideTimeDelta : sc_TimeDelta;
	
	
	#if SC_ENABLE_RT_CASTER && !SC_RT_RECEIVER_MODE
	if (bool(sc_ProxyMode)) {
		RayHitPayload rhp = GetRayTracingHitData();
		
		if (bool(sc_NoEarlyZ)) {
			if (rhp.id.x != uint(instance_id)) {
				return;
			}
		}
		
		Globals.BumpedNormal              = float3( 0.0 );
		Globals.ViewDirWS                 = rhp.viewDirWS;
		Globals.PositionWS                = rhp.positionWS;
		Globals.VertexTangent_WorldSpace  = rhp.tangentWS.xyz;
		Globals.VertexNormal_WorldSpace   = rhp.normalWS;
		Globals.VertexBinormal_WorldSpace = cross( Globals.VertexNormal_WorldSpace, Globals.VertexTangent_WorldSpace.xyz ) * rhp.tangentWS.w;
		Globals.Surface_UVCoord0          = rhp.uv0;
	} else
	#endif
	
	{
		Globals.BumpedNormal              = float3( 0.0 );
		Globals.ViewDirWS                 = normalize(sc_Camera.position - varPos);
		Globals.PositionWS                = varPos;
		Globals.VertexTangent_WorldSpace  = normalize( varTangent.xyz );
		Globals.VertexNormal_WorldSpace   = normalize( varNormal );
		Globals.VertexBinormal_WorldSpace = cross( Globals.VertexNormal_WorldSpace, Globals.VertexTangent_WorldSpace.xyz ) * varTangent.w;
		Globals.Surface_UVCoord0          = varTex01.xy;
	}
	
	// -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -
	
	/* Input port: 'FinalColor'  */
	
	{
		float2 UVCoord_N11 = float2(0.0); Node11_Surface_UV_Coord( UVCoord_N11, Globals );
		float Output_N0 = 0.0; Node0_Float_Parameter( Output_N0, Globals );
		float2 CoordsOut_N16 = float2(0.0); Node16_Scale_Coords( UVCoord_N11, float2( Output_N0 ), NF_PORT_CONSTANT( float2( 0.0, 0.0 ), Port_Center_N016 ), CoordsOut_N16, Globals );
		float4 Output_N1 = float4(0.0); Node1_Texture_2D_Parameter( CoordsOut_N16, Output_N1, Globals );
		float Output_N5 = 0.0; Node5_Swizzle( Output_N1, Output_N5, Globals );
		float4 Output_N9 = float4(0.0); Node9_Texture_2D_Parameter( CoordsOut_N16, Output_N9, Globals );
		float4 Output_N2 = float4(0.0); Node2_Texture_2D_Parameter( CoordsOut_N16, Output_N2, Globals );
		float Value1_N3 = 0.0; float Value2_N3 = 0.0; float Value3_N3 = 0.0; float Value4_N3 = 0.0; Node3_Split_Vector( Output_N2, Value1_N3, Value2_N3, Value3_N3, Value4_N3, Globals );
		float4 Output_N6 = float4(0.0); Node6_PBR_Lighting( Output_N1.xyz, Output_N5, Output_N9.xyz, NF_PORT_CONSTANT( float3( 0.0, 0.0, 0.0 ), Port_Emissive_N006 ), Value1_N3, Value2_N3, float3( Value3_N3 ), NF_PORT_CONSTANT( float3( 1.0, 1.0, 1.0 ), Port_SpecularAO_N006 ), Output_N6, Globals );
		
		FinalColor = Output_N6;
	}
	
	#if SC_RT_RECEIVER_MODE
	
	#else
	
	
	
	
	
	
	// -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -
	
	
	#if SC_ENABLE_RT_CASTER && !SC_RT_RECEIVER_MODE
	if (bool(sc_ProxyMode)) {
		sc_writeFragData0( encodeReflection( FinalColor ) );
		return;
	}
	#endif
	
	FinalColor = ngsPixelShader( FinalColor );
	
	
	
	// -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -
	
