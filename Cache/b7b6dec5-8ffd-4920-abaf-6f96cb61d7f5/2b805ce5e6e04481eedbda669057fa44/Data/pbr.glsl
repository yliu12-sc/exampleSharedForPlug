	FinalColor = max( FinalColor, 0.0 );
	sc_writeFragData0( FinalColor );
	
	// -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -
	
	processOIT( FinalColor );
	
	#endif
}

